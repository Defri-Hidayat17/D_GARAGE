<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".biodata_page">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/log_in_page">

        <!-- Title Text -->

        <!-- Back Button -->
        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lexend_deca"
            android:text="Lengkapi Data Kamu"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageButton1"
            app:layout_constraintVertical_bias="0.261" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.038"
            app:srcCompat="@drawable/back"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <!-- Name Input -->

        <!-- Email Input -->
        <EditText
            android:id="@+id/inputnama"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:layout_marginBottom="324dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:fontFamily="@font/lexend_deca"
            android:hint="Masukkan Nama"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#555555"
            android:textColorHint="#B0B0B0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            app:layout_constraintVertical_bias="0.187" />

        <EditText
            android:id="@+id/inputemail"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:fontFamily="@font/lexend_deca"
            android:hint="Masukkan Email"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#555555"
            android:textColorHint="#B0B0B0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputnama"
            app:layout_constraintVertical_bias="0.043" />

        <!-- Country Input (EditText for country selection) -->

        <EditText
            android:id="@+id/inputNomorHanphone"
            android:layout_width="245dp"
            android:layout_height="50dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:fontFamily="@font/lexend_deca"
            android:hint="Masukkan Nomor Handphone"
            android:inputType="phone"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#555555"
            android:textColorHint="#B0B0B0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/inputemail"
            app:layout_constraintVertical_bias="0.046" />

        <EditText
            android:id="@+id/inputnegara"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/indonesia"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/lexend_deca"
            android:hint="+62"
            android:inputType="none"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#555555"
            android:textColorHint="#B0B0B0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView7"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputemail"
            app:layout_constraintVertical_bias="0.046" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="10dp"
            android:layout_height="65dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.334"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputemail"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/kotak_putih" />


        <EditText
            android:id="@+id/inputjeniskelamin"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:background="@drawable/input_bg"
            android:drawableLeft="@drawable/gender"
            android:drawableRight="@drawable/segitiga_bawah"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:fontFamily="@font/lexend_deca"
            android:hint="Jenis Kelamin"
            android:inputType="none"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#555555"
            android:textColorHint="#B0B0B0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputNomorHanphone"
            app:layout_constraintVertical_bias="0.07" />

        <EditText
            android:id="@+id/inputkodepos"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:fontFamily="@font/lexend_deca"
            android:hint="Kode Pos"
            android:inputType="phone"
            android:gravity="center"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#555555"
            android:textColorHint="#B0B0B0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView7"
            app:layout_constraintHorizontal_bias="0.842"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputjeniskelamin"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/inputtanggallahir"
            android:layout_width="245dp"
            android:layout_height="50dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:fontFamily="@font/lexend_deca"
            android:hint="Tanggal Lahir"
            android:inputType="none"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#555555"
            android:textColorHint="#B0B0B0"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/inputjeniskelamin"
            app:layout_constraintVertical_bias="0.093" />

        <EditText
            android:id="@+id/inputalamat"
            android:layout_width="370dp"
            android:layout_height="50dp"
            android:background="@drawable/input_bg"
            android:drawablePadding="10dp"
            android:fontFamily="@font/lexend_deca"
            android:hint="Alamat Sesuai KTP"
            android:gravity="center"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="#555555"
            android:textColorHint="#B0B0B0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputtanggallahir"
            app:layout_constraintVertical_bias="0.176" />

        <Button
            android:id="@+id/button3"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:background="@drawable/button_kirim_red"
            android:fontFamily="@font/lexend_deca"
            android:text="Kirim"
            android:textColor="@color/white"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputalamat"
            app:layout_constraintVertical_bias="0.483" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>
