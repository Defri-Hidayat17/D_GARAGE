<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#D933B5E5"> <!-- Warna ripple biru terang dengan transparansi 85% -->

    <item android:id="@android:id/mask">
        <shape
            android:shape="rectangle">
            <solid android:color="#33B5E5"/> <!-- Mask biru terang -->
            <corners android:radius="10dp"/> <!-- Radius sudut -->
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Transparan -->
            <corners android:radius="10dp"/> <!-- Radius sudut -->
        </shape>
    </item>
</ripple>
