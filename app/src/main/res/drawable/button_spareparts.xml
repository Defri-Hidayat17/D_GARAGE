<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/darker_gray"> <!-- Warna ripple -->

    <!-- Mask untuk efek ripple -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="15dp"/> <!-- Radius sudut pada mask diubah menjadi 25dp -->
        </shape>
    </item>

    <!-- Latar belakang tombol dengan radius sudut dan warna merah -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D40000"/> <!-- Warna latar belakang tombol menjadi merah -->
            <corners android:radius="15dp"/> <!-- Radius sudut pada tombol diubah menjadi 25dp -->
        </shape>
    </item>

</ripple>
