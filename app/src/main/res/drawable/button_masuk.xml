<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/darker_gray"> <!-- Warna ripple -->

    <!-- Mask untuk efek ripple -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="10dp"/> <!-- Radius sudut pada mask -->
        </shape>
    </item>

    <!-- Latar belakang tombol dengan radius sudut dan warna hitam -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/black"/> <!-- Warna latar belakang tombol -->
            <corners android:radius="10dp"/> <!-- Radius sudut pada tombol -->
        </shape>
    </item>

</ripple>
